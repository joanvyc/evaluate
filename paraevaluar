#!/bin/bash

source paraevaluar.utils

PARAEVALUAR_HOME=/home/jvinyals/Documents/paraevaluar

function init {
	${PARAEVALUAR_HOME}/paraevaluar.init
}

function mkscript {
	${PARAEVALUAR_HOME}/paraevaluar.mkscript
}

function help {
	usage;
}

function parse_command {
	case $1 in
		help)
			shift;
			COMMAND=help
			;;
		init)
			shift;
			COMMAND=init
			;;
		mkscript)
			shift;
			COMMAND=mkscript
			;;
		
		*)
			error "Unknown command: $1";
			;;
	esac
}

if [[ $# -lt 1 ]]; then error "paraevaluar needs at least one argument. \nFor more information run: paraevaluar help"; fi

parse_command $@;
#parse_args $@;

eval ${COMMAND}
